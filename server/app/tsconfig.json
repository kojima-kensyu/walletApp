{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node", "jest"],
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        },
        "allowJs": true
    },
    "include": ["src/index.js"],
    "exclude": ["node_modules"]

}